<% layout("layout") -%>

    <div class="jumbotron" id="navbar-gap">
        <div class="container">
            <h1 class="text-center">Find your favourite Product</h1>
            <p class="text-center">Search many of Amazon-2's products</p>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="input-group col-md-12">
                        <input id="search" type="text" class="form-control input-lg" name="search" placeholder="Search for a product...">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" id="searchResults">
            <% for (var i = 0 ; i < products.length ; i++) { %>
                <div class="col-md-4 col-sm-12">
                    <a href="/product/<%= products[i]._id %>" style="padding:5px">
                        <div id="card-link" class="card">
                            <img src="<%= products[i].image %>" class="card-img-top">
                            <div class="card-block text-center">
                                <h3 class="card-title">
                                    <%= products[i].name %>
                                </h3>
                                <p class="card-text">
                                    <%= products[i].category.name %>
                                </p>
                                <p class="card-text">$
                                    <%= products[i].price %>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
                    <ul class="pagination text-center">
                        <li class="page-item">
                            <% for (var i = 1 ; i <= pages ; i++) { %>
                                <% if (i === 1) { %>
                                    <li>
                                        <a href="/" class="page-link">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <li>
                                            <a href="/page/<%= i %>" class="page-link">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% } %>
                        </li>
                    </ul>
        </div>
    </div>
<% layout("layout") -%>

<% if (data.length === 0) { %>
    <h3>Search Not Found</h3>
    <% } else { %>
        <h3>Results for <%= query %></h3>
            <div class="container">
                <div class="row">
                <% for (var i = 0 ; i < data.length ; i++) { %>
                    <div class="col-md-4 col-sm-12">
                        <a href="/product/<%= data[i]._source._id %>" style="padding:5px">
                            <div id="card-link" class="card">
                                <img src="<%= data[i]._source.image %>" class="card-block">
                                <div class="card-block text-center">
                                  <h3 class="card-title"><%= data[i]._source.name %></h3>
                                  <p class="card-text"><%= data[i]._source.category.name %></p>
                                  <p class="card-text">$<%= data[i]._source.price %></p>
                               </div>
                            </div>
                        </a>
                    </div>
                <% } %>
                </div>
            </div>
    <% } %>